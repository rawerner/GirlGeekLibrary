<% provide(:title, @user.name) %>

<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>

<p>
  <strong>Location:</strong>
  <%= @user.location %>
</p>

<p>
  <strong>Bio:</strong>
  <%= @user.bio %>
</p>
<p>

</p>
<p>
  <strong>Photo:</strong>
  <%= image_tag @user.photo_url(:thumb).to_s if @user.photo? %>
</p>

<h3>My Shelf</h3>
  <%= form_tag({controller: "books", action: "search"}, :method => "get") do %>
  <%= label_tag(:book_title, "Search for:") %>
  <%= text_field_tag(:book_title) %>
  <%= submit_tag("Search") %>
<% end %>

<div class="row">
  <% @owned_books.each do |book| %>
      <div class="col-xs-4 col-sm-3 col-md-2">
        <%= link_to((image_tag "#{book.cover_thumbnail}", alt: "#{book.title}", title: "#{book.title}"), "/", class: "thumbnail") %>
      </div>
  <% end %>
</div>
